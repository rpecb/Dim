<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php">
    <testsuites>
        <testsuite name="Dim Test Suite">
            <directory>./tests/DimTest/</directory>
        </testsuite>
    </testsuites>
    <filter>
